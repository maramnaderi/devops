pipeline {
    agent any

    tools {
        maven 'Maven 3.6.3'
        jdk 'JAVA_HOME'
    }

    environment {
        JAVA_HOME = '/usr/lib/jvm/java-17-openjdk-amd64'
        PATH = "${JAVA_HOME}/bin:${env.PATH}"
        DOCKER_REPO = 'nihedxtn/gestion-pist'
    }

    stages {
        stage('Cloner le d√©p√¥t') {
            steps {
                git branch: 'Nihed-PistManagment', url: 'https://github.com/maramnaderi/devops.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Tests unitaires') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Tests d\'int√©gration') {
            steps {
                sh 'mvn verify -DskipUnitTests'
            }
        }

        stage('Prepare Libraries') {
            steps {
                sh 'mvn dependency:copy-dependencies -DoutputDirectory=target/lib'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def imageTag = "v1.${BUILD_NUMBER}"
                    def baseImage = "nihedxtn/gestion-pist"
                    def fullImage = "${baseImage}:${imageTag}"

                    // Build with Docker Compose (which creates :latest)
                    sh 'docker-compose build spring-backend'

                    // Debug output
                    sh 'docker images'

                    // Make sure latest exists before tagging
                    def exists = sh(script: "docker images -q ${baseImage}:latest", returnStdout: true).trim()
                    if (!exists) {
                        error "‚ùå Image ${baseImage}:latest not found after build!"
                    }

                    // Tag for version
                    sh "docker tag ${baseImage}:latest ${fullImage}"
                }
            }
        }


        stage('Push Docker Image') {
            steps {
                script {
                    def imageTag = "v1.${BUILD_NUMBER}"
                    def baseImage = "nihedxtn/gestion-pist"
                    def fullImage = "${baseImage}:${imageTag}"

            withCredentials([string(credentialsId: 'docker-hub-password', variable: 'DOCKER_HUB_PASSWORD')]) {
                sh "echo ${DOCKER_HUB_PASSWORD} | docker login -u nihedxtn --password-stdin"

                // Double check image exists before pushing
                def exists = sh(script: "docker images -q ${fullImage}", returnStdout: true).trim()
                if (!exists) {
                    error "‚ùå Image ${fullImage} not found. Tag failed?"
                }

                sh "docker push ${fullImage}"
                sh "docker push ${baseImage}:latest"
                    }
                }
            }
        }

        stage('Debug Images') {
    steps {
        sh 'docker images'
    }
}

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'scanner'
                    withSonarQubeEnv('scanner') {
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=gestion-pist -Dsonar.sources=src"
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build and quality checks succeeded!'
        }
        failure {
            echo '‚ùå Build failed. Check logs above.'
        }
        always {
            echo 'üîÅ Pipeline execution completed.'
        }
    }
}
