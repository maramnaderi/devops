pipeline {
    agent any

    tools {
        maven 'M2_HOME' // Assure-toi que Maven est bien configur√© dans Jenkins
    }

    environment {
        APP_ENV = "DEV"
    }

    options {
        timeout(time: 1, unit: 'MINUTES')
    }

    stages {
        stage('Checkout code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/hwafa/atelier-jenkins.git',
                    credentialsId: 'jenkins-github-token'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn install -Dmaven.test.skip=true'
            }
        }
    }

    post {
        always {
            echo "======always======"
        }
        success {
            echo "=====pipeline executed successfully====="
        }
        failure {
            echo "======pipeline execution failed======"
        }
    }
}
