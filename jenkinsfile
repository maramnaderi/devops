pipeline {
    agent any

    environment {
        GITHUB_REPO = 'https://github.com/maramnaderi/devops.git'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'khairidinne', url: "${GITHUB_REPO}"
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
            }
        }

        stage('Use GitHub Token') {
            steps {
                withCredentials([string(credentialsId: 'jenkins-github-token', variable: 'GITHUB_TOKEN')]) {
                    sh 'echo "Using GitHub token: $GITHUB_TOKEN"'
                }
            }
        }
    }

    post {
        always {
            echo '======pipeline finished======'
        }
    }
}
